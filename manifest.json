{
  "manifest_version": 3,
  "name": "yukonChromeExtension",
  "version": "1.1",
  "description": "Yukon 专属浏览器助手：支持视频倍速控制、代理切换与超级复制功能",
  "permissions": ["activeTab", "storage", "proxy"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_title": "Personal Assistant"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
